<?xml version="1.0" encoding="utf-8"?>
<!-- NFC Tech Filter: Specifies which NFC technologies the app can handle -->
<!-- Used with TECH_DISCOVERED intent for comprehensive tag support -->
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Primary NDEF and formatable tags -->
    <tech-list>
        <tech>android.nfc.tech.Ndef</tech>
        <tech>android.nfc.tech.NdefFormatable</tech>
    </tech-list>
    
    <!-- ISO-DEP (ISO 14443-4) - Common for payment cards -->
    <tech-list>
        <tech>android.nfc.tech.IsoDep</tech>
    </tech-list>
    
    <!-- NFC-A (ISO 14443-3A) - Most common tag type -->
    <tech-list>
        <tech>android.nfc.tech.NfcA</tech>
    </tech-list>
    
    <!-- NFC-B (ISO 14443-3B) -->
    <tech-list>
        <tech>android.nfc.tech.NfcB</tech>
    </tech-list>
    
    <!-- NFC-F (JIS 6319-4) - FeliCa technology -->
    <tech-list>
        <tech>android.nfc.tech.NfcF</tech>
    </tech-list>
    
    <!-- NFC-V (ISO 15693) - Vicinity cards -->
    <tech-list>
        <tech>android.nfc.tech.NfcV</tech>
    </tech-list>
    
    <!-- MIFARE Classic - Common but not on all devices -->
    <tech-list>
        <tech>android.nfc.tech.MifareClassic</tech>
    </tech-list>
    
    <!-- MIFARE Ultralight -->
    <tech-list>
        <tech>android.nfc.tech.MifareUltralight</tech>
    </tech-list>
    
    <!-- NFC Barcode (Kovio) -->
    <tech-list>
        <tech>android.nfc.tech.NfcBarcode</tech>
    </tech-list>
</resources>
